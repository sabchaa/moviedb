<h1 class="title"><%= title %></h1>
<form action="/add" method="post">
  <%- include('_movieField', { label: 'Movie Title', type: 'text', name: 'title', placeholder: 'Movie Title', required: true, value: null }) %>
  <%- include('_movieField', { label: 'Image URL', type: 'text', name: 'img', placeholder: 'Image URL', value: null, required: true }) %>
  <%- include('_movieField', { label: 'Director', type: 'text', name: 'director', placeholder: 'Director', required: true, value: null }) %>
  <%- include('_movieField', { label: 'Description', type: 'text', name: 'description', placeholder: 'Description', value: null, required: true }) %>
  <%- include('_movieField', { label: 'Year', type: 'number', name: 'year', placeholder: 'Year', required: true, value: null }) %>
  <%- include('_movieField', { label: 'Runtime', type: 'number', name: 'runtime', placeholder: 'Runtime', required: true, value: null }) %>
  <%- include('_genresCheckboxes', { checkedGenres: [] }) %>
  <div class="field">
    <div class="control">
      <button class="button is-primary is-link" type="submit">Add Movie</button>
    </div>
  </div>
</form>